  </head>

  <body>

    <div id="flex-content-container">
      <nav class="navbar fixed-top navbar-toggleable-md header-color">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
          <span> 
            <div class="nav-item">
              <%= link_to 'Homepage', root_path %>
              <br/>
              </span>
            </div>
          </ul>
        </div>
      </nav>
    <br/><br/><br/><br/>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
    </div>
  
    <div id="footer">
      <div class="text-center">
        <a class="fa fa-github-square fa-3x make-it-green" href="https://github.com/Learningstuff98/rails-chess-app"></a>
        <span class="linkedin">
          <a class="fa fa-linkedin-square fa-3x make-it-green" href="https://www.linkedin.com/in/andy-strube-6231ba152/"></a>
        </span>
        <span class="resume">
          <a class="fa fa-file-text fa-3x make-it-green" href="https://docs.google.com/document/d/1qm4nBdIZfsx8zh4IwYvkVuQYclpOXUCVxnC9vV3_eBM/edit"></a>
        </span>
      </div>
    </div>

